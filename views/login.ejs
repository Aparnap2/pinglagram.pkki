<%- include('./partials/header') %>
<div
  class="w-full min-h-screen bg-black text-white py-5 flex flex-col items-center justify-center"
>
  <div class="flex flex-col items-center gap-5 px-4">
    <img class="w-100%" src="/images/image.png" alt="" />
    <form class="w-full" action="/login" method="post">
      <input
        class="px-3 mt-2 py-2 border-2 border-zinc-500 rounded-md block w-full bg-zinc-900"
        type="text"
        placeholder="username"
        name="username"
      />
      <input
        class="px-3 mt-2 py-2 border-2 border-zinc-400 rounded-md block w-full bg-zinc-900"
        type="password"
        placeholder="password"
        name="password"
      />
      <input
        class="w-full bg-zinc-900 px-3 py-3 rounded-md mt-2"
        type="submit"
        value="Log In"
      />
    </form>
   
  
    
    <span
      >Don't have an account ?
      <a href="/" class="text-yellow-400">Sign Up</a></span
    >
  </div>
</div>
<style>
  .transform-glow:hover {
    filter: brightness(1.2);
    transition: filter 0.3s ease-in-out;
  }
</style>


<%- include('./partials/footer') %>
