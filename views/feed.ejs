<%- include('./partials/header') %>
  <div class="w-full min-h-screen bg-black text-white py-5">
    <div class="w-full px-4 flex items-center justify-between">
      <img class="w-1/2" src="/images/image.png" alt="">
      <div class="icons -mt-2 flex gap-5 items-center">
        
      </div>
    </div>
    <div class="story px-3 flex gap-3 overflow-auto mt-5">
      
  

    </div>

    <div class="posts mb-20">
     <% posts.reverse().forEach (function (elem){%>
      <div class="post mt-10 w-full min-h-[50vh]">
        <div class="title px-4 flex items-center gap-2">
          <div class="w-[8vw] h-[8vw] bg-sky-100 rounded-full">
<img class="w-full h-full object-cover overflow-hidden rounded-full" 
  src="<%= cloudinary.url(elem.user.profileImage, { secure: true }) %>" alt="" srcset="">

          </div>
          <h4 class="text-sm"><%= elem.user.username %></h4>
          
        </div>
        <div class="w-full h-96 mt-4 bg-sky-100">

          <img   class="w-full h-full object-cover overflow-hidden" src="<%= cloudinary.url(elem.picture, { secure: true }) %>" alt="">  
        </div>
        <div class="options w-full px-4 flex justify-between items-center text-[1.4rem]">
          <div class="flex gap-3 mt-2">
           <a href="/like/post/<%= elem._id  %>">   <i class="ri-heart-3-line"></i></a>
           
          </div>
       
        </div>
        <h3 class="px-4 mt-2 text-sm leading-none tracking-tight"><%= elem.likes.length %>   likes</h3>
        <h2 class="text-white font-light text-sm mt-2"><span class="font-semibold pl-4 pr-2"></span><%= elem.caption %></h2>
     

     <%}) %>
    </div>
  </div>
  <%- include('./partials/footer') %>